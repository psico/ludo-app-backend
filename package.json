{
  "name": "ludo-app-backend",
  "version": "2.0.0",
  "description": "Backend to use in project LudoApp, project to build social network for boardgames, register matches and challenge yourself in search of achievements",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/psico/ludo-app-backend.git"
  },
  "scripts": {
    "start": "tsc && yarn copy-files && node dist/index.js",
    "copy-files": "copyfiles -u 1 resources/*.* dist/",
    "dev": "nodemon --config nodemon.json src/index.ts",
    "dev:debug": "nodemon --config nodemon.json --inspect-brk src/index.ts",
    "test": "./node_modules/.bin/jest",
    "test:watch": "./node_modules/.bin/jest --watch"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage/typescript/",
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules",
      "schema.ts"
    ],
    "coverageReporters": [
      "json",
      "html",
      "lcov"
    ],
    "verbose": true,
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.6.9",
    "@types/express-graphql": "^0.9.0",
    "@types/graphql": "^14.5.0",
    "@types/node": "^18.7.6",
    "axios": "^0.27.2",
    "axios-mock-adapter": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "express-graphql": "^0.12.0",
    "firebase": "^8.2.7",
    "firebase-admin": "^9.5.0",
    "graphql": "^15.4.0",
    "graphql-tools": "^8.2.7",
    "jest-junit": "^14.0.0",
    "passport": "^0.4.1",
    "ts-jest": "^26.5.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "copyfiles": "^2.4.1",
    "eslint": "^7.30.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.19",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "typescript": "4.6.4"
  },
  "author": "Jo√£o Gabriel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/psico/ludo-app-backend/issues"
  },
  "homepage": "https://github.com/psico/ludo-app-backend#readme"
}
